main.aside-card-container.categories-widget
    h3=theme.links_title || __('friend')
    section
        ul.category-list
            each link in theme.links
                li.category-list-item(class= link.tloB ? "tloB" : link.tloA ? "tloA is-hidden" : link.tloC ? "tloC is-hidden" : link.tloD ? "tloD" : "")
                    a.category-list-link(href= link.url)= link.title
                    a.category-list-count(href= link.url)= link.domain
