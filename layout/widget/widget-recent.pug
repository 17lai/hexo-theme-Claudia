extends html

block content
    include methods
    main.aside-card-container.recent-widget
        h3= theme.title
        ul
            if site.posts.length > 0
                each post in site.posts.sort('date', -1).limit(6).toArray()
                    li.is-flex
                        - var title = post.title || __('title')
                        // change to element replace image placeholder
                        - var backgroundColor = 'f5f5f5'
                        - var uiAvatarURL = `background=${backgroundColor}&name=${title.slice(0, 2)}`
                        - var imgURL = getThumbnail(post.cover || getPostCoverImg(post))
                        img(src= imgURL || `https://ui-avatars.com/api/?${uiAvatarURL}` alt="cover")
                        //else
                        //    div.post-img-placeholder
                        section.is-flex-grow-2
                            p.has-text-weight-semibold.recent-post-ellipses(style= "line-height: 20px; font-size: 14px")
                                a(href=url_for(post.path) target="_blank" rel="noopener nofollow")
                                    if post.categories.toArray().find(category => category.name === '视频')
                                        i.tag.post-item-tag(style="color: #3273dc; border-color: #3273dc; margin-right: 5px")="视频"
                                    span= post.title || __('title')
                            if post.date
                                time(datetime=post.date.toJSON()).has-text-weight-semibold.has-text-grey
                                    = date(post.date, date_format)
